// ğŸ”¹ à¸„à¹ˆà¸²à¸•à¸±à¹‰à¸‡à¸•à¹‰à¸™
float tempThreshold = 30.0;
float humidityThreshold = 40.0;
float soilMoistureThreshold = 30.0;  // à¸„à¹ˆà¸²à¹à¸ˆà¹‰à¸‡à¹€à¸•à¸·à¸­à¸™à¸„à¸§à¸²à¸¡à¸Šà¸·à¹‰à¸™à¹ƒà¸™à¸”à¸´à¸™

// ğŸ”¹ Blynk Token
const char auth[] = "KVnCKXOo7nWOYwGFOqqVMK5Nvu2hKbQo";

// ğŸ”¹ GPIO Configuration
#define LED_PIN 2
#define DHTPIN 4
#define DHTTYPE DHT22
#define RELAY1_PIN 26
#define RELAY2_PIN 25
#define RELAY3_PIN 33
#define RELAY4_PIN 32
#define Water_SENSOR_PIN 34  // à¹€à¸‹à¹‡à¸™à¹€à¸‹à¸­à¸£à¹Œà¸„à¸§à¸²à¸¡à¸Šà¸·à¹‰à¸™à¹ƒà¸™à¸”à¸´à¸™ (analog)

// ğŸ”¹ Sensor à¹à¸¥à¸° Relay States
DHT dht(DHTPIN, DHTTYPE);
BlynkTimer timer;
int relay1State = LOW;
int relay2State = LOW;
int relay3State = LOW;
int relay4State = LOW;
unsigned long lastReconnectAttempt = 0;

// ğŸ”¹ Wi-Fi Setup
void setupWiFi() {
  WiFiManager wifiManager;
  wifiManager.autoConnect("RedKub");
  Serial.println("âœ… Wi-Fi Connected!");
}

// ğŸ”¹ Setup
void setup() {
  Serial.begin(9600);
  dht.begin();

  pinMode(LED_PIN, OUTPUT);
  pinMode(RELAY1_PIN, OUTPUT);
  pinMode(RELAY2_PIN, OUTPUT);
  pinMode(RELAY3_PIN, OUTPUT);
  pinMode(RELAY4_PIN, OUTPUT);
  pinMode(Water_SENSOR_PIN, INPUT);

  setupWiFi();
  Blynk.begin(auth, WiFi.SSID().c_str(), WiFi.psk().c_str(), "iotservices.thddns.net", 5535);

  timer.setInterval(10000L, readDHTSensor);
  timer.setInterval(15000L, readSoilMoisture);
  timer.setInterval(5000L, reconnectWiFi);
  timer.setInterval(10000L, reconnectBlynk);
}

// ğŸ”¹ Blynk Connected
BLYNK_CONNECTED() {
  Serial.println("Blynk connected!");
  Blynk.syncAll();
  digitalWrite(LED_PIN, HIGH);
}

BLYNK_DISCONNECTED() {
  digitalWrite(LED_PIN, LOW);
}

// ğŸ”¹ Slider à¸›à¸£à¸±à¸šà¸„à¹ˆà¸²à¸•à¹ˆà¸²à¸‡à¹†
BLYNK_WRITE(V3) {
  tempThreshold = param.asFloat();
  Serial.printf("ğŸ›  à¸›à¸£à¸±à¸šà¸„à¹ˆà¸²à¹à¸ˆà¹‰à¸‡à¹€à¸•à¸·à¸­à¸™à¸­à¸¸à¸“à¸«à¸ à¸¹à¸¡à¸´à¹€à¸›à¹‡à¸™: %.2fÂ°C\n", tempThreshold);
}

BLYNK_WRITE(V4) {
  humidityThreshold = param.asFloat();
  Serial.printf("ğŸ›  à¸›à¸£à¸±à¸šà¸„à¹ˆà¸²à¹à¸ˆà¹‰à¸‡à¹€à¸•à¸·à¸­à¸™à¸„à¸§à¸²à¸¡à¸Šà¸·à¹‰à¸™à¹€à¸›à¹‡à¸™: %.2f%%\n", humidityThreshold);
}

BLYNK_WRITE(V5) {
  soilMoistureThreshold = param.asFloat();
  Serial.printf("ğŸ›  à¸›à¸£à¸±à¸šà¸„à¹ˆà¸²à¹à¸ˆà¹‰à¸‡à¹€à¸•à¸·à¸­à¸™à¸„à¸§à¸²à¸¡à¸Šà¸·à¹‰à¸™à¸”à¸´à¸™à¹€à¸›à¹‡à¸™: %.2f%%\n", soilMoistureThreshold);
}

// ğŸ”¹ Relay Control
