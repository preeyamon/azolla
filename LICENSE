// ğŸ”¹ à¸­à¹ˆà¸²à¸™à¸­à¸¸à¸“à¸«à¸ à¸¹à¸¡à¸´à¹à¸¥à¸°à¸„à¸§à¸²à¸¡à¸Šà¸·à¹‰à¸™
// à¸­à¹ˆà¸²à¸™à¸„à¹ˆà¸²à¸­à¸¸à¸“à¸«à¸ à¸¹à¸¡à¸´à¹à¸¥à¸°à¸„à¸§à¸²à¸¡à¸Šà¸·à¹‰à¸™à¸ˆà¸²à¸ DHT
void readDHTSensor() {
    float temperature = dht.readTemperature();
    float humidity = dht.readHumidity();

    if (!isnan(temperature) && !isnan(humidity)) {
        Serial.printf("ğŸŒ¡ Temp: %.2fÂ°C, ğŸ’§ Humidity: %.2f%%\n", temperature, humidity);
        Blynk.virtualWrite(V1, temperature);
        Blynk.virtualWrite(V2, humidity);

        // ğŸ”´ **à¹ƒà¸Šà¹‰à¸„à¹ˆà¸² Slider à¹à¸—à¸™à¸„à¹ˆà¸²à¸„à¸‡à¸—à¸µà¹ˆ**
        if (temperature > tempThreshold) {  // à¸–à¹‰à¸²à¸­à¸¸à¸“à¸«à¸ à¸¹à¸¡à¸´à¸ªà¸¹à¸‡à¸à¸§à¹ˆà¸²à¹€à¸à¸“à¸‘à¹Œ
            String msg = "ğŸ”¥ à¹à¸ˆà¹‰à¸‡à¹€à¸•à¸·à¸­à¸™! à¸­à¸¸à¸“à¸«à¸ à¸¹à¸¡à¸´à¸ªà¸¹à¸‡à¹€à¸à¸´à¸™à¸à¸³à¸«à¸™à¸” (" + String(tempThreshold) + "Â°C): " + String(temperature) + "Â°C";
            sendTelegramMessage(msg);
        }
        if (humidity < humidityThreshold) {  // à¸–à¹‰à¸²à¸„à¸§à¸²à¸¡à¸Šà¸·à¹‰à¸™à¸•à¹ˆà¸³à¸à¸§à¹ˆà¸²à¹€à¸à¸“à¸‘à¹Œ
            String msg = "ğŸ’§ à¹à¸ˆà¹‰à¸‡à¹€à¸•à¸·à¸­à¸™! à¸„à¸§à¸²à¸¡à¸Šà¸·à¹‰à¸™à¸•à¹ˆà¸³à¸à¸§à¹ˆà¸²à¸à¸³à¸«à¸™à¸” (" + String(humidityThreshold) + "%): " + String(humidity) + "%";
            sendTelegramMessage(msg);
        }

    } else {
        Serial.println("âŒ Failed to read from DHT sensor!");
    }
}

// ğŸ”¹ à¸­à¹ˆà¸²à¸™à¸„à¹ˆà¸²à¸„à¸§à¸²à¸¡à¸Šà¸·à¹‰à¸™à¹ƒà¸™à¸”à¸´à¸™
void readSoilMoisture() {
  int raw = analogRead(Water_SENSOR_PIN); // 0-4095
  float soilMoisture = map(raw, 4095, 0, 0, 100); // à¸¢à¸´à¹ˆà¸‡à¸”à¸´à¸™à¹à¸«à¹‰à¸‡ à¸„à¹ˆà¸²à¸¢à¸´à¹ˆà¸‡à¸¡à¸²à¸
  Serial.printf("ğŸŒ± Soil Moisture: %.2f%%\n", soilMoisture);
  Blynk.virtualWrite(V6, soilMoisture);

  if (soilMoisture < soilMoistureThreshold) {
    sendTelegramMessage("ğŸŒ± à¹à¸ˆà¹‰à¸‡à¹€à¸•à¸·à¸­à¸™! à¸„à¸§à¸²à¸¡à¸Šà¸·à¹‰à¸™à¹ƒà¸™à¸”à¸´à¸™à¸•à¹ˆà¸³à¸à¸§à¹ˆà¸²à¸à¸³à¸«à¸™à¸” (" + 
      String(soilMoistureThreshold) + "%): " + String(soilMoisture, 1) + "%");
  }
}

// ğŸ”¹ Reconnect Wi-Fi
void reconnectWiFi() {
  if (WiFi.status() != WL_CONNECTED) {
    Serial.println("ğŸ”„ Reconnecting Wi-Fi...");
    WiFiManager wifiManager;
    wifiManager.autoConnect("RedKub");
    Serial.println("âœ… Wi-Fi Reconnected!");
  }
}

// ğŸ”¹ Reconnect Blynk
void reconnectBlynk() {
  unsigned long now = millis();
  if (!Blynk.connected() && (now - lastReconnectAttempt > 10000)) {
    Serial.println("Blynk disconnected! Attempting to reconnect...");
    if (Blynk.connect()) {
      Serial.println("âœ… Blynk Reconnected!");
    } else {
      Serial.println("âŒ Blynk reconnect failed.");
    }
    lastReconnectAttempt = now;
  }
}

// ğŸ”¹ à¸ªà¹ˆà¸‡à¸‚à¹‰à¸­à¸„à¸§à¸²à¸¡à¹„à¸›à¸¢à¸±à¸‡ Telegram
void sendTelegramMessage(String message) {
  HTTPClient http;
  String url = "https://api.telegram.org/bot" + String(botToken) +
               "/sendMessage?chat_id=" + String(chatID) +
               "&text=" + message;

  http.begin(url);
  int httpResponseCode = http.GET();

  Serial.print("ğŸ“¡ HTTP Response Code: ");
  Serial.println(httpResponseCode);

  if (httpResponseCode > 0) {
    Serial.println("âœ… à¸ªà¹ˆà¸‡à¸‚à¹‰à¸­à¸„à¸§à¸²à¸¡ Telegram à¸ªà¸³à¹€à¸£à¹‡à¸ˆ!");
    String response = http.getString();
    Serial.println("ğŸ“¨ Response: " + response);
  } else {
    Serial.print("âŒ à¸ªà¹ˆà¸‡à¸‚à¹‰à¸­à¸„à¸§à¸²à¸¡ Telegram à¸¥à¹‰à¸¡à¹€à¸«à¸¥à¸§: ");
    Serial.println(httpResponseCode);
  }
  http.end();
}

// ğŸ”¹ Loop
void loop() {
  Blynk.run();
  timer.run();
}
